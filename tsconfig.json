{
  "compilerOptions": {
    "allowJs": true,
    "target": "esnext",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "rootDir": ".",
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "noImplicitReturns": true,
    "moduleResolution": "Node",
    "types": [
      "vitest/globals"
    ],
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*",
    "./vite.config.ts",
    "./test.setup.ts"
  ]
}
