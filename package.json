{
  "name": "formifly",
  "version": "1.0.2",
  "description": "React form handling as light as a butterfly",
  "main": "dist/umd/formifly.js",
  "module": "dist/esm/index.js",
  "files": [
    "dist/esm/*",
    "dist/umd/*"
  ],
  "scripts": {
    "test": "jest --config jest.config.js ",
    "coverage": "jest --config jest.config.js --collectCoverage",
    "watch": "rollup -c rollup.config.js -w",
    "build:dev": "rollup -c rollup.config.js",
    "build:prod": "NODE_ENV=production rollup -c rollup.config.js",
    "browse": "browser-sync start --s --ss build --index assets/html/index.html --files dist/* --no-notify",
    "start": "npm-run-all --parallel watch browse",
    "prepublishOnly": "npm run build:prod"
  },
  "jest-junit": {
    "outputDirectory": "reports/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/binary-butterfly/formifly.git"
  },
  "keywords": [
    "react",
    "forms"
  ],
  "author": "binary butterfly GmbH",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/binary-butterfly/formifly/issues"
  },
  "homepage": "https://github.com/binary-butterfly/formifly#readme",
  "devDependencies": {
    "@babel/plugin-transform-runtime": "^7.16.4",
    "@babel/preset-env": "^7.16.4",
    "@babel/preset-react": "^7.16.0",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.1.1",
    "@rollup/plugin-replace": "^3.0.0",
    "@testing-library/react": "^12.1.2",
    "babel-plugin-styled-components": "^2.0.2",
    "browser-sync": "^2.27.7",
    "jest": "^27.4.7",
    "jest-junit": "^13.0.0",
    "jsdom": "^19.0.0",
    "npm-run-all": "^4.1.5",
    "rollup": "^2.58.0",
    "rollup-plugin-node-globals": "^1.4.0",
    "rollup-plugin-styles": "^4.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "styled-components": "^5.3.3"
  },
  "peerDependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "prop-types": "^15.8.1"
  }
}
